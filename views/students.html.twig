<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Students</title>
    </head>
    <body>
        <h1>Students</h1>

        {% if students is not empty %}
            <p>Here are all your students:</p>
            <ul>
                {% for student in students %}
                    <li>
                        <a href="/student/{{ student.getId }}">{{ student.getName }}</a>
                        <p>{{ student.getDateEnrolled }}</p>
                        <form action='/student/{{ student.getId }}/edit' method='get'>
                            <button type='submit'>Edit Student</button>
                        </form>
                        <form action="/student/{{ student.getId }}/delete" method="post">
                            <input name="_method" type="hidden" value="delete">
                            <button type="submit">Delete </button>
                        </form>
                    </li>
                {% endfor %}
        {% endif %}

            </ul>



        <p><a href='/'>Home</a></p>
    </body>
</html>
